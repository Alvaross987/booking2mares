{
  "name": "Reserva",
  "plural": "Reservas",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "pension": {
      "type": "string"
    },
    "desde": {
      "type": "date",
      "required": true
    },
    "hasta": {
      "type": "date",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "habitacion": {
      "type": "belongsTo",
      "model": "Habitacion",
      "foreignKey": ""
    },
    "usuarioId": {
      "type": "belongsTo",
      "model": "Usuario",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "Hoy": {
      "accepts": [],
      "returns": [
        {
          "arg": "ocupadas",
          "type": "array",
          "root": false,
          "description": "Las habitaciones ocupadas actualmente"
        }
      ],
      "description": "Descubre las reservas que estan activas hoy",
      "http": [
        {
          "path": "/GET",
          "verb": "get"
        }
      ]
    }
  }
}
